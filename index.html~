	<script>
		var height = window.innerHeight;
		function loaded(){
			document.querySelector(".fabsvg").addEventListener("click",pageJumpForward);
		}
		function onscroll(){
			document.querySelector(".title").classList.add("titleGone");
			var scrollTop = document.body.scrollTop;
			if (scrollTop === 0){
				document.querySelector(".title").classList.remove("titleGone");
				document.querySelector(".fabsvg").style.transform = "rotate(0deg)";	
				document.getElementById("svg1").classList.remove("logoScrolled");
				document.getElementById("head").classList.remove("headScrolled");
				document.getElementById("eye1").classList.remove("eye1Scrolled");
				document.getElementById("eye2").classList.remove("eye2Scrolled");
				document.getElementById("mustache1").classList.remove("mustache1Scrolled");
				document.getElementById("mustache2").classList.remove("mustache2Scrolled");
				document.getElementById("bowtie1").classList.remove("bowtie1Scrolled");
				document.getElementById("bowtie2").classList.remove("bowtie2Scrolled");
				document.getElementById("bowtie3").classList.remove("bowtie3Scrolled");
				document.getElementById("monocle").classList.remove("monocleScrolled");
				document.getElementById("lapel1").classList.remove("lapel1Scrolled");
				document.getElementById("lapel2").classList.remove("lapel2Scrolled");
				document.querySelector(".button1").classList.remove("button1Scrolled");	
				document.querySelector(".button2").classList.remove("button2Scrolled");	
				document.querySelector(".button3").classList.remove("button3Scrolled");	
				document.querySelector(".button4").classList.remove("button4Scrolled");	
				document.querySelector(".button5").classList.remove("button5Scrolled");	
				document.querySelector(".fabsvg").addEventListener("click",pageJumpForward);
				document.querySelector(".fabsvg").removeEventListener("click",pageJumpBackward);
			}
			if (scrollTop === (height - 56)){

				document.querySelector(".fabsvg").style.transform = "rotate(180deg)";	
				document.getElementById("svg1").classList.add("logoScrolled");
				document.getElementById("head").classList.add("headScrolled");
				document.getElementById("eye1").classList.add("eye1Scrolled");
				document.getElementById("eye2").classList.add("eye2Scrolled");
				document.getElementById("mustache1").classList.add("mustache1Scrolled");
				document.getElementById("mustache2").classList.add("mustache2Scrolled");
				document.getElementById("bowtie1").classList.add("bowtie1Scrolled");
				document.getElementById("bowtie2").classList.add("bowtie2Scrolled");
				document.getElementById("bowtie3").classList.add("bowtie3Scrolled");
				document.getElementById("monocle").classList.add("monocleScrolled");
				document.getElementById("lapel1").classList.add("lapel1Scrolled");
				document.getElementById("lapel2").classList.add("lapel2Scrolled");
				document.querySelector(".button1").classList.add("button1Scrolled");	
				document.querySelector(".button2").classList.add("button2Scrolled");	
				document.querySelector(".button3").classList.add("button3Scrolled");	
				document.querySelector(".button4").classList.add("button4Scrolled");	
				document.querySelector(".button5").classList.add("button5Scrolled");	
				document.querySelector(".fabsvg").removeEventListener("click",pageJumpForward);
				document.querySelector(".fabsvg").addEventListener("click",pageJumpBackward);
			}
		}
		function pageJumpForward(){
			var scrollTop = document.body.scrollTop;
			console.log(scrollTop);
		  var pos = scrollTop;
			var i = 0;
		  var id = setInterval(frame, 10);
		  function frame() {
		      if (pos >= height-56) {
		          clearInterval(id);
		      } else {
							i++
		          pos = pos + Math.pow(i, 2)/i; 
							window.scrollTo(0, pos);
		      }
		  }
			document.querySelector(".fabsvg").removeEventListener("click",pageJumpForward);
			document.querySelector(".fabsvg").addEventListener("click",pageJumpBackward);
		}
		function pageJumpBackward(){
			var scrollTop = document.body.scrollTop;
			console.log(scrollTop);
		  var pos = scrollTop;
			var i = 0;
		  var id = setInterval(frame, 10);
		  function frame() {
		      if (pos <= 0) {
		          clearInterval(id);
		      } else {
							i++
		          pos = pos - Math.pow(i, 2)/i; 
							window.scrollTo(0, pos);
		      }
		  }
			document.querySelector(".fabsvg").addEventListener("click",pageJumpForward);
			document.querySelector(".fabsvg").removeEventListener("click",pageJumpBackward);
		}

	</script>
</html>
